<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#291C0E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#291C0E</item>
        <item name="android:background">@drawable/tab_inactive</item>
    </style>

    <style name="TabButton.Active" parent="TabButton">
        <item name="android:background">@drawable/tab_active</item>
    </style>
    <style name="TeacherMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:backgroundTint">#3F51B5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DashboardCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:animationCache">true</item>
    </style>

    <style name="DashboardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="CellHeader">
        <item name="android:background">#052659</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CellData">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#052659</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DashboardLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#291C0E</item> <!-- dark readable color -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DashboardCard1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">9dp</item>
    </style>
        <style name="SettingsItemStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:padding">16dp</item>
        </style>


    <drawable name="spinner_bg">@drawable/spinner_background</drawable>


    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#052659</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>

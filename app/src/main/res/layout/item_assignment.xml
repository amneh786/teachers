<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="2dp">

    <TextView
        android:id="@+id/titleText"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/descriptionText"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dueDateText"
        android:text="Due Date"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/submissionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/submittedLabel"
            android:text="Submitted:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/submittedNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..." />

        <TextView
            android:id="@+id/notSubmittedLabel"
            android:text="Not Submitted:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notSubmittedNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..." />
    </LinearLayout>

</LinearLayout>
